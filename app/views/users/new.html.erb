<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div id="new-user-form-container">
                <i class="fas fa-user-plus fa-3x"></i>
                <h1 id="new-user-header">New User</h1>

                <div class="form-group">
                    <%= form_for @user, controller: 'users', action: 'update' do |f| %>
                    <label for="username">Username</label>
                    <%= f.text_field :username, class: "form-control" %>
                    <label for="password">Password</label>
                    <%= f.password_field :password, class: "form-control" %>
                    <label>Password Confirmation</label>
                    <%= f.password_field :password_confirmation, class: "form-control" %>
                    <%= f.label :email %>
                    <%= f.email_field :email, class: "form-control" %>
                    <%= f.label :city %>
                    <%= f.text_field :city, class: "form-control" %>
                    <%= f.label :state %>
                    <%= f.text_field :state, class: "form-control" %>
                    <%= f.label :bio %>
                    <%= f.text_field :bio, class: "form-control" %>
                    <br>
                    <%= f.submit "Submit", class: "btn btn-primary" %>
                    <% end %>
                </div>
            </div>
        </div>
        <div class="col">
            <div id="new-user-picture-container">
                <div id="new-user-text">
                    <h1 id="new-user-header-2">Create A New User</h1>
                    <h3 id="new-user-lead" class="lead">Sign up to have access to our queue function. Among all the other great features we have avaiable!</h3>
                </div>
            </div>
        </div>
    </div>
</div>
</div>